{
  "name": "api-express-ts",
  "version": "1.0.0",
  "description": "Example of API with Express and TypeScript, applying Views. ",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "tsc && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "4.17.16",
    "ts-node-dev": "^2.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "express": "4.18.2"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": false
        }
      ],
      "@typescript-eslint/semi": "off"
    }
  }
}
